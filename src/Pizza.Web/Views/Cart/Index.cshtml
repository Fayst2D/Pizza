@model Pizza.Web.ViewModels.CartViewModel;


<head>
    <link rel="stylesheet" type="text/css" href="~/css/main.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/normalize.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/site.css"/>
</head>

<h1>Корзина</h1>

<table class="table">	



    @if(Model.Cart != null)
    {
        @foreach(var item in Model.Cart)
        {
	    <tr>
            <td>
               <img style='width: 80px; height: 60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Pizza.Image))" />
         </td>
         <td>
                @Html.DisplayFor(modelItem => item.Pizza.Name)
            </td>        
         <td>
                @Html.DisplayFor(modelItem => item.Pizza.Price)
            </td>        
         <td>
               @Html.DisplayFor(modelItem => item.Quantity)
         </td>  
        </tr>
        }
    }


</table>

<h2>Total: @Model.Sum</h2>

<div>
    <a asp-action="Index" asp-controller="Home">Continue shopping</a>
</div>