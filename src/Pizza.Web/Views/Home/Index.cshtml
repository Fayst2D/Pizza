@model IEnumerable<Pizza.Core.Entities.Pizza>




@{
    ViewData["Title"] = "Home Page";
    
}






<head>
    <link rel="stylesheet" type="text/css" href="~/css/main.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/normalize.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/site.css"/>
</head>




<body>




<section class="section-top">
     <div class="section-top_container">
        <p class="section-top_info">от белорусского повара</p>
        <h1 class="section-top_title">Лучшая пицца в Лепеле</h1>
     </div>
</section>



<div class="container">

    <form asp-controller="Home" asp-action="Index">
        <p>
         Title: <input type="text" name="SearchString"/>
         <input type="submit" value="Filter"/>
        </p>
    </form>

    <div class="catalog">
    @foreach (var item in Model)
    {
        <div class="catalog_item">
            <div class="product">
                <img class="product_image" width="400" height="40пека0" src="data:image/jpg;base64,@(Convert.ToBase64String(item.Image))"/>
                <div class="product_content">
                    <h3 class="product_name">@item.Name</h3>
                    <p class="product_recipe">@item.Recipe</p>
                </div>
            </div>
            <footer class="product_footer">               
                <div class="product_bottom">
                    <div class="product_price">
                        <span class="product_price-value">@item.Price</span>
                        <span class="product_currency">руб</span>
                    </div>        
                    <form asp-controller="Cart" asp-action="Add" asp-route-id=@item.Id>
                        <button class="product_button">
                            <span class="button_text">В корзину</span>
                        </button>
                    </form>                    
                </div>

            </footer>
        </div>
    }
    </div>
</div>



</body>

